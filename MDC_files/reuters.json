{
"template":{
	"name":"template1",
	"tags":{
		"title":"AJAX-SOLR from PHP",
		"subtitle":"all the js are been obtained and altered via PHP"
	}
},
"css":	["tests/reuters/reuters.css"],
"js":	["tests/reuters/reuters.theme.js"],
"widgets": [
    {
        "widget": "ResultWidget",
        "parameters": {
            "id": "result",
            "target": "#docs"
        },
        "templateTarget":"right",
		"tags":{}
    },
    {
        "widget": "PagerWidget",
        "parameters": {
            "id": "pager",
            "target": "#pager",
            "prevLabel": "&lt;",
            "nextLabel": "&gt;",
            "innerWindow": 1
        },
        "templateTarget":"result",
		"tags":{}
    },
    {
        "widget": "CurrentSearchWidget",
        "parameters": {
            "id": "currentsearch",
            "target": "#selection"
        },
        "templateTarget":"left",
		"tags":{"title":"Current Search","id":"selection"}
    },
    {
        "widget": "AutocompleteWidget",
        "parameters": {
            "id": "text",
            "target": "#search",
            "fields": [
                "topics",
                "organisations",
                "exchanges"
            ]
        },
        "templateTarget":"left",
		"tags":{"title":"Search","subtitle":"(press ESC to close suggestions)","id":"search"}
    },
    {
        "widget": "TagcloudWidget",
        "parameters": {
            "id": "topics",
            "target": "#topics",
            "field": "topics"
        },
        "templateTarget":"left",
		"tags":{"title":"Top Topics","id":"topics"}
    },
    {
        "widget": "TagcloudWidget",
        "parameters": {
            "id": "organisations",
            "target": "#organisations",
            "field": "organisations"
        },
        "templateTarget":"left",
		"tags":{"title":"Top Organisations","id":"organisations"}
    },
    {
        "widget": "TagcloudWidget",
        "parameters": {
            "id": "exchanges",
            "target": "#exchanges",
            "field": "exchanges"
        },
        "templateTarget":"left",
		"tags":{"title":"Top Exchanges","id":"exchanges"}
    },
    {
        "widget": "CountryCodeWidget",
        "parameters": {
            "id": "countries",
            "target": "#countries",
            "field": "countryCodes"
        },
        "templateTarget":"left",
		"tags":{"title":"By Country","id":"countries","preview_id":"preview"}
    },
    {
        "widget": "CalendarWidget",
        "parameters": {
            "id": "calendar",
            "target": "#calendar",
            "field": "date"
        },
        "templateTarget":"left",
		"tags":{"title":"By Date","id":"calendar"}
    }
]}